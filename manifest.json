{
	"manifest_version": 2,
	"name": "TrelloX Plus",
	"description": "Trello with focus.",
	"author": "Plínio José Rodrigues Mourão",
	"version": "1.8.1",
	"homepage_url": "https://trellox.io",
	"icons": {
		"16":	"img/icon16.png",
		"48":	"img/icon48.png",
		"128":	"img/icon128.png"
	},
	"browser_action": {
		"default_icon": {
			"16": "img/icon16.png",
			"24": "img/icon24.png",
			"32": "img/icon32.png"
		},
		"default_title": "TrelloX Plus. Trello with focus."
	},
	"content_scripts": [{
		"matches":	["*://trello.com/*"],
		"css": 		["css/styles.css"],
		"js": 		[
			"js/lib/jquery.js", 
			"js/lib/jquery-ui.js", 
			"js/require.js", 
			"js/app/core.js",
			"js/app.js"
		]
	}],
	"permissions": ["storage", "*://trello.com/*"]
}
